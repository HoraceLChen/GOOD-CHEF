<div class="card-row" data-controller="index" data-index-target="parent" data-total-offers="<%= @total_offers %>">
  <% @offers.each_with_index do |offer, index| %>
    <% grid_class = "div#{index + 1}" %>
    <div data-controller="card"
         class="card-offer <%= grid_class %> in-line image-container align-items-end justify-content-center"
         style="background-image: url(https://images.squarespace-cdn.com/content/59488c7dbf629aaeded8b9b1/1556478492296-CRA46VU26F25E2PSG092/yoshi_April2019_1.jpg)">

      <div class="mb-2">
        <h4 class="<%= grid_class %>card mb-0" ><%= offer.title %></h4>
        <p id="<%= grid_class %>"class="card-subtitle"><%= offer.cuisine %> / $<%= offer.price_pp %> / <%= link_to("read more", offer_path(offer), class: "readmore") %></p>
      </div>
    </div>
  <% end %>
  <%= link_to "Load More", "#", data: { action: "click->index#loadMore" } %>
</div>

<div class="container my-3">
  <%= render 'offers/map', markers: @markers %>
</div>
