<h1>Hello</h1>
<% if @offer.reviews.any?%>
  <% @reviews.each do |review|  %>
  <p><%= review.rating %></p>
  <p><%= review.description %></p>
  <p><%= review.user.full_name %></p>
  <% end %>
<% end %>

<%= simple_form_for([@offer, @review]) do |f| %>
  <div class="rating">
    <% (1..5).each do |i| %>
      <%= f.radio_button :rating, i, id: "rating#{i}" %>
      <%= f.label :rating, "#{i} â˜…", for: "rating#{i}" %>
    <% end %>
  </div>
  <%= f.input :description %>
  <%= f.submit %>
<% end %>
