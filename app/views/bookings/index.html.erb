<div class="banner banner-sm" style="background-image: linear-gradient(rgba(0,0,0,0.1),rgba(0,0,0,0.1)), url(https://images.unsplash.com/photo-1505935428862-770b6f24f629?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=3867&q=80);">
    <div class="d-flex align-items-center flex-column">
      <h2>Review Bookings</h2>
    </div>
  </div>

<div class="page-body">
    <% @bookings.each do |booking| %>
      <div class="booking-bar">
        <img src = 'https://www.escoffier.edu/wp-content/uploads/2016/02/Smiling-female-chef-with-white-hat-and-uniform-in-a-kitchen-e1611773135718.jpg' class="avatar-large"/>
          <div class="booking-content" >
            <p><small><%= booking.date %></small></p>
            <p class="title"><strong><%= booking.offer.title %></strong></p>
            <p>Cuisine : <%= booking.offer.cuisine %></p>
            <p>Description : <%= booking.offer.description %></p>
            <p>Guests : <%= booking.guests %></p>
          </div>
          <div class="booking-status d-flex justify-content-end px-3">
            <p class="btn-secondary"><%= booking.status %></p>
          </div>
      </div>
    <% end %>
  <%# list.photo.attached? ? cl_image_path(list.photo.key) :  %>
  <% @bookings_as_chef.each do |booking| %>
      <div class="booking-bar">
          <img src = 'https://www.escoffier.edu/wp-content/uploads/2016/02/Smiling-female-chef-with-white-hat-and-uniform-in-a-kitchen-e1611773135718.jpg' class="avatar-large"/>
            <div class="booking-content">
              <p><small><%= booking.date %></small></p>
              <p class="title"><strong><%= booking.offer.title %></strong></p>
              <p>Cuisine : <%= booking.offer.cuisine %></p>
              <p>Description : <%= booking.offer.description %></p>
              <p>Guests : <%= booking.guests %></p>
              </div>
            <div class="booking-status d-flex justify-content-end gap-3">
              <p class="btn btn-secondary"><%= booking.status %></p>
      <% if booking.status == 'pending' %>
                <%= simple_form_for booking do |f| %>
                <%= f.input :status, as: :hidden, input_html: { value: 'accepted'} %>
                <%= f.submit 'Accept', class: 'btn btn-danger' %>
                <% end %>
                <%= simple_form_for booking do |f| %>
                <%= f.input :status, as: :hidden, input_html: { value: 'rejected'} %>
                <%= f.submit 'Reject', class: 'btn btn-light' %>
                <% end %>
        <% end %>
            </div>
        </div>
    <% end %>
</div>
